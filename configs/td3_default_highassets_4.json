{
  "actor_layers":
  [
    {"type": "ConvLayer", "filter_shape": [1, 3], "filter_number": 2, "strides":[1,1], "padding":"valid","activation_function":"relu", "regularizer":"l2"},
    {"type": "BatchNormalization"},
    {"type": "EIIE_Dense","filter_number":40,"activation_function":"relu","regularizer":"l2"},
    {"type": "BatchNormalization"},
    {"type": "EIIE_Output","regularizer":"l2"}
  ],

  "critic_layers":
  [
    {"type": "ConvLayer", "filter_shape": [1, 3], "filter_number": 2, "strides":[1,1], "padding":"valid","activation_function":"relu", "regularizer":"l2"},
    {"type": "EIIE_Dense","filter_number":40,"activation_function":"relu","regularizer":"l2"},
    {"type": "EIIE_Output_WithW","regularizer":"l2"},
    {"type": "DenseLayer", "neuron_number":22,  "activation_function":"relu","regularizer": "l2"},
    {"type": "BatchNormalization"},
    {"type": "DenseLayer", "neuron_number":11,  "activation_function":"relu","regularizer": "l2"},
    {"type": "BatchNormalization"},
    {"type": "DenseLayer", "neuron_number":1,  "activation_function":"","regularizer": "l2"}
  ],

  "training":{
    "episode": 2,
    "max_step": 2000,
    "max_step_val":300,
    "buffer_size": 5000,
    "buffer_size_val":2000,
    "num_mixtrue":5,
    "batch_size": 64,
    "policy_delay":2,
    "device": "cpu",
    "tau": 0.01,
    "gamma": 0.99,
    "actor_learning_rate": 0.001,
